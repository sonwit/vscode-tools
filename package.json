{
  "name": "vscode-tools",
  "displayName": "VSCode tools",
  "description": "Useful tools for VSCode to enhance your coding experience.",
  "version": "0.0.1",
  "publisher": "sonwit",
  "repository": {
    "type": "git",
    "url": "https://github.com/sonwit/vscode-tools.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:vscode-tools.insertLog",
    "onCommand:vscode-tools.duplicateSelection"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-tools.insertLog",
        "title": "Insert Console Log"
      },
      {
        "command": "vscode-tools.duplicateSelection",
        "title": "Duplicate Selection or Line"
      }
    ],
    "keybindings": [
      {
        "command": "vscode-tools.insertLog",
        "key": "ctrl+alt+l",
        "mac": "ctrl+option+l",
        "when": "editorHasSelection"
      },
      {
        "command": "vscode-tools.duplicateSelection",
        "key": "ctrl+alt+d",
        "mac": "ctrl+option+d",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "npm run compile && node ./dist/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@vscode/test-electron": "^2.3.7",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.30",
    "mocha": "^10.4.0",
    "typescript": "^5.3.3"
  }
}
